{
  "name": "home-assistant-js",
  "description": "A JavaScript implementation of the Home Assistant API",
  "version": "0.1.0",
  "main": "src/index.js",
  "jsnext:main": "src/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/balloob/home-assistant-js"
  },
  "scripts": {
    "dev": "rollup -c rollup.config.js --watch --output dist/homeassistant.es6.js",
    "dev_demo": "set BUILD_DEMO=1 rollup -c rollup.config.js --watch --output dist/homeassistant.es6.js",
    "prod": "set BUILD_DEV=0 rollup -c rollup.config.js --output dist/homeassistant.es6.js",
    "demo": "set BUILD_DEV=0 BUILD_DEMO=1 rollup -c rollup.config.js --watch --output dist/homeassistant.es6.js",

    "wp_dev_demo": "set BUILD_DEMO=1 webpack --color --progress -d --watch",
    "wp_prod": "set BUILD_DEV=0 webpack --color --progress -p",
    "wp_demo": "set BUILD_DEV=0 BUILD_DEMO=1 webpack --color --progress -p",
    "wp_dev": "webpack --color --progress -d --watch",
    "test": "eslint src"
  },
  "dependencies": {
    "keymirror": "^0.1.1",
    "nuclear-js": "^1.3.0",
    "object-assign": "^4.1.0",
    "debounce": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.9",
    "babel-loader": "^6.2",
    "babel-preset-es2015-webpack": "^6.4.1",
    "eslint": "^2.11.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.1",
    "rollup": "^0.31.2",
    "rollup-plugin-commonjs": "^3.0.0",
    "rollup-plugin-node-resolve": "^1.7.0",
    "rollup-plugin-replace": "^1.1.0",
    "rollup-watch": "^2.4.0",
    "webpack": "^2.1.0-beta.7"
  }
}
